<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#689F38</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#EEFF41</item>
    </style>

    <style name="textview_team_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/text_color_title</item>
    </style>

    <style name="score_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_large</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/score_large</item>
    </style>

    <style name="central_button_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="score_small_theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fontsize_normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:layout_marginLeft">34dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="score_small_theme.left">
        <item name="android:layout_marginLeft">74dp</item>
    </style>

    <style name="bellow_button_theme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="reset_button_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Linearlayout_center_horizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">44dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Linearlayout_vertical_center">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>